<div id="<%= id %>-card" class="bg-shadow rounded-lg w-11/12 mx-auto text-white p-2 transition-all duration-500 ease-linear mb-4">
  <div class="w-full mx-auto text-center text-lg my-2">
    <div class="my-3">
      <%= name %>
    </div>
    <%= image_tag cover, class: "mx-auto min-w-60 max-h-48" %>
  </div>
  <div class="text-center py-2">
    <%= link_to "Find Out More", find_out_more_path(app: app), class: "mx-auto text-center bg-indigo-100 text-indigo-800 p-3 rounded w-48 inline-block mb-2", id: id, remote: true %>
    <%= (link_to "View Live", app[:url], class: "mx-auto text-center bg-indigo-100 text-indigo-800 p-3 rounded w-48 inline-block", target: "_blank") unless app[:url].nil? %>
  </div>
</div>
