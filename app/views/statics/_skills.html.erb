<div class="text-white text-white uppercase gap-3 grid grid-cols-2 md:grid-cols-4 w-full p-3">
  <% skills.each do |skill, image| %>
    <div class="bg-indigo-800 rounded-lg">
      <div class="text-center text-md mx-auto my-5 font-light">
        <%= image_tag(image, class: "mx-auto my-2 justify-self-center") %>
        <div class="mx-auto tracking-wide my-2"><%= skill.titleize %></div>
      </div>
    </div>
  <% end %>
</div>

